<MyGridLayout>
	rows: 2
	GridLayout:
		cols: 3
		ToggleButton:
			text: 'Off'
			on_state: root.handleToggle(self)
			size_hint: None, 1
			size_x: '100dp'
		Button:
			text: 'Click here'
			on_press: root.handleClick()
			disabled: root.clickDisabled
			
		Label:
			text: root.labelTxt
			font_name: 'fonts/Lcd.ttf'
			font_size: '80dp'
			color: 1, 0.5, 1, 1
	GridLayout:
		cols: 3
		Switch:
			id: my_switch
			#active: root.switchActive 
			active: False
			#on_active: root.handleSwitch(self)
			
		Slider:
			id: my_slider
			orientation: 'vertical'
			min: '0'
			max: '100'
			#on_value: root.handleSlider(self)
			#disabled: root.sliderDisabled
			disabled: not my_switch.active
			
		Label:
			text: str(int(my_slider.value))
			font_name: 'fonts/Lcd.ttf'
			font_size: '50dp'
			color: 1, 0.5, 1, 1
